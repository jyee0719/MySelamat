<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D9E8F6"
    tools:context=".TrackResult">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Track Hotspot"
        android:textSize="25dp"
        android:typeface="serif"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="#6883BD"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

    <TextView
        android:id="@+id/addrtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="40dp"
        android:textColor="@color/black"/>

        <TextView
            android:id="@+id/addr"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_round"
            android:hint="loading..."
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#728EC5"
            android:textSize="28dp" />

    <TextView
        android:id="@+id/casetv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:text="Total Cases"
        android:textSize="40dp"/>

    <TextView
        android:id="@+id/cases"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:textSize="28dp"
        android:padding="10dp"
        android:hint="loading..."
        android:textColorHint="#728EC5"
        android:background="@drawable/bg_round"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/risktv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:text="Risk Zone"
        android:textSize="40dp"/>

    <TextView
        android:id="@+id/risk"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="loading..."
        android:padding="10dp"
        android:textColorHint="#728EC5"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_round"
        android:textColor="@color/black"
        android:textSize="28dp"/>
    </LinearLayout>
</LinearLayout>