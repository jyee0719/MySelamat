<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Essentials"
    android:background="#D9E8F6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Face Masks"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageView
                        android:id="@+id/mask1"
                        android:layout_width="wrap_content"
                        android:layout_height="88dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/threeply"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3-ply Mask"
                        android:layout_gravity="center"/>
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnMask1"
                        android:layout_marginTop="15dp"
                        android:text="Buy"
                        android:backgroundTint="#6883BD"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageView
                        android:id="@+id/mask2"
                        android:layout_width="wrap_content"
                        android:layout_height="88dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/kf94"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KF94"
                        android:layout_gravity="center"/>
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnMask2"
                        android:layout_marginTop="15dp"
                        android:text="Buy"
                        android:backgroundTint="#6883BD"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageView
                        android:id="@+id/mask3"
                        android:layout_width="wrap_content"
                        android:layout_height="88dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/n95"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N95"
                        android:layout_gravity="center"/>
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnMask3"
                        android:layout_marginTop="15dp"
                        android:text="Buy"
                        android:backgroundTint="#6883BD"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Sanitizers"
                    android:typeface="serif"
                    android:textAlignment="center"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageView
                        android:id="@+id/san1"
                        android:layout_width="wrap_content"
                        android:layout_height="88dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/dettol"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hand Sanitizer"
                        android:layout_gravity="center"/>
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnSan1"
                        android:layout_marginTop="15dp"
                        android:text="Buy"
                        android:backgroundTint="#6883BD"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageView
                        android:id="@+id/san2"
                        android:layout_width="wrap_content"
                        android:layout_height="88dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/nano"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nano Spray"
                        android:layout_gravity="center"/>
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnSan2"
                        android:layout_marginTop="15dp"
                        android:text="Buy"
                        android:backgroundTint="#6883BD"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageView
                        android:id="@+id/san3"
                        android:layout_width="wrap_content"
                        android:layout_height="88dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/fog"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fog Machine"
                        android:layout_gravity="center"/>
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnSan3"
                        android:layout_marginTop="15dp"
                        android:text="Buy"
                        android:backgroundTint="#6883BD"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Others"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageView
                        android:id="@+id/shield"
                        android:layout_width="wrap_content"
                        android:layout_height="88dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/shield"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Face Shield"
                        android:layout_gravity="center"/>
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnShield"
                        android:layout_marginTop="15dp"
                        android:text="Buy"
                        android:backgroundTint="#6883BD"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageView
                        android:id="@+id/tempGun"
                        android:layout_width="wrap_content"
                        android:layout_height="88dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/temperature"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature Gun"
                        android:layout_gravity="center"/>
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnTempGun"
                        android:layout_marginTop="15dp"
                        android:text="Buy"
                        android:backgroundTint="#6883BD"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageView
                        android:id="@+id/glove"
                        android:layout_width="wrap_content"
                        android:layout_height="88dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/glove"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plastic Glove"
                        android:layout_gravity="center"/>
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnGlove"
                        android:layout_marginTop="15dp"
                        android:text="Buy"
                        android:backgroundTint="#6883BD"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageView
                        android:id="@+id/oximeter"
                        android:layout_width="wrap_content"
                        android:layout_height="88dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/oximeter"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oximeter"
                        android:layout_gravity="center"/>
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnOximeter"
                        android:layout_marginTop="15dp"
                        android:text="Buy"
                        android:backgroundTint="#6883BD"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <ImageView
                        android:id="@+id/disinfectant"
                        android:layout_width="wrap_content"
                        android:layout_height="88dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/disinfectant"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disinfectant"
                        android:layout_gravity="center"/>
                    <Button
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnDisinfectant"
                        android:layout_marginTop="15dp"
                        android:text="Buy"
                        android:backgroundTint="#6883BD"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>