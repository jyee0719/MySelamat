<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    android:background="#D9E8F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <Button
        android:id="@+id/sop_button"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:textSize="16dp"
        android:text="SOP"
        app:backgroundTint="#6883BD" />

    <Button
        android:id="@+id/health_status_button"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:textSize="16dp"
        android:text="Update Health Status"
        app:backgroundTint="#A0B3DD" />

    <Button
        android:id="@+id/hotspot_button"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:textSize="16dp"
        android:text="Track Hotspot"
        app:backgroundTint="#6883BD" />

    <Button
        android:id="@+id/register_vaccine_button"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:textSize="16dp"
        android:text="Register For Vaccine"
        app:backgroundTint="#A0B3DD" />

    <Button
        android:id="@+id/check_vaccine_button"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:textSize="16dp"
        android:text="Check Vaccine Status"
        app:backgroundTint="#6883BD" />

    <Button
        android:id="@+id/location_checkin_button"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:textSize="16dp"
        android:text="Location Check In"
        app:backgroundTint="#A0B3DD" />

    <Button
        android:id="@+id/locate_health_button"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:textSize="16dp"
        android:text="Locate Health Screening Facilities"
        app:backgroundTint="#6883BD" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="35dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_person_24" />

        <ImageView
            android:id="@+id/home1"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_home_24" />

        <ImageView
            android:id="@+id/history"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_history_24" />
    </LinearLayout>

</LinearLayout>